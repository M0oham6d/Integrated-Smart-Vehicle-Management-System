#include "../HAL/motor.h"
#include "../MCAL/uart.h"
#include "../Standard_Types/standard_types.h"
#include <stdlib.h>

uint8 motorSpeed(uint8 speed)
{
	switch(speed)
	{
	case '1':
		return 20;
		break;
	case '2':
		return 40;
		break;
	case '3':
		return 60;
		break;
	case '4':
		return 80;
		break;
	case '5':
		return 100;
		break;
	}
}

int main(void)
{

	DcMotor_Init();

	UART_ConfigType uart_configratoin = {9600, UART_Parity_NONE, UART_STOP_1_BIT, MODE_EIGHT_BIT};
	UART_init(&uart_configratoin);

	while(1)
	{
		while(UART_receiveByte() != 'F' || UART_receiveByte() != 'B' || UART_receiveByte() != 'S');
		uint8 direction = UART_receiveByte();
		uint8 speed = UART_receiveByte();

		if (direction == 'F')
		{
			DcMotor_Rotate(CW, motorSpeed(speed));
		}
		else if(direction == 'B')
		{
			DcMotor_Rotate(CCW, motorSpeed(speed));
		}
		else if(direction == 'S')
		{
			DcMotor_Rotate(STOP, MOTOR_STOP);
		}
		else
		{

		}
	}
	return 0;
}
