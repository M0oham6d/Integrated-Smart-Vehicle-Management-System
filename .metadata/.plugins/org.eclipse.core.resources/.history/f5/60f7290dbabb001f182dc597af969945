int main(void)
{
	uint8 recievedMSG;

	DcMotor_Init();

	UART_ConfigType uart_configratoin = {9600, UART_Parity_NONE, UART_STOP_1_BIT, MODE_EIGHT_BIT};
	UART_init(&uart_configratoin);

	while(1)
	{
		recievedMSG = UART_receiveByte();

		switch(recievedMSG)
		{
		case 'F':
			while(UART_receiveByte() == 'F')
			{
				Forward();
			}
			Stop();
			break;
		case 'B':
			while(UART_receiveByte() == 'B')
			{
				Backward();
			}
			Stop();
			break;
		case 'S':
			Stop();
			break;
		case 'R':
			Right_Forward();
			break;
		case 'L':
			Left_Forward();
			break;
		}
	}

	return 0;
}
