#include "../HAL/motor.h"
#include "../MCAL/uart.h"
#include "../Standard_Types/standard_types.h"
#include <stdlib.h>

uint8 motorSpeed(uint8 speed)
{
	switch(speed)
	{
	case '1':
		return 20;
		break;
	case '2':
		return 40;
		break;
	case '3':
		return 60;
		break;
	case '4':
		return 80;
		break;
	case '5':
		return 100;
		break;
	}
}

int main(void)
{

	DcMotor_Init();

	UART_ConfigType uart_configratoin = {9600, UART_Parity_NONE, UART_STOP_1_BIT, MODE_EIGHT_BIT};
	UART_init(&uart_configratoin);

	while(1)
	{
		uint8 direction = UART_receiveByte();
		uint8 speed, clicked;

		switch(direction)
		{
		case 'F':
			do
			{
				speed = UART_receiveByte();
				DcMotor_Rotate(CW, motorSpeed(speed));
			}while(UART_receiveByte() >= '1' && UART_receiveByte() <= '5');
			break;
		case 'B':
			do
			{
				speed = UART_receiveByte();
				DcMotor_Rotate(CCW, motorSpeed(speed));
				clicked = UART_receiveByte();
			}while(clicked >= '1' && clicked <= '5');
			break;
		case 'S':
			DcMotor_Rotate(STOP, MOTOR_STOP);
			break;
		}

		return 0;
	}
}
