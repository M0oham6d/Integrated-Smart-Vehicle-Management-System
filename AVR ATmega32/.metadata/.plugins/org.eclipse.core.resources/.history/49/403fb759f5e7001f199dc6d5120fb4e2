 * Description	: Source file for the PIR AVR driver
 *******************************************************************************/
#include "pir.h"

/*******************************************************************************
 *                      	Functions Definitions                              *
 *******************************************************************************/
/*
 * Description:
 * Function to initialize the PIR sensor.
 * This function sets up the necessary pin directions for the PIR sensor.
 */
void PIR_init(void) {
    GPIO_setupPinDirection(PIR_PORT, PIR0_PIN, PIN_INPUT);
    GPIO_setupPinDirection(PIR_PORT, PIR1_PIN, PIN_INPUT);
}

/*
 * Description:
 * Function to read the value from a specific PIR sensor pin.
 * pir_port: The port number where the PIR sensor is connected.
 * pir_pin: The pin number where the PIR sensor is connected.
 * Returns: The value read from the PIR sensor pin (0 or 1).
 */
uint8 PIR_ReadValue1() {
    return (GPIO_readPin(PIR_PORT, PIR0_PIN));
}

uint8 PIR_ReadValue2() {
    return (GPIO_readPin(PIR_PORT, PIR1_PIN));
}

