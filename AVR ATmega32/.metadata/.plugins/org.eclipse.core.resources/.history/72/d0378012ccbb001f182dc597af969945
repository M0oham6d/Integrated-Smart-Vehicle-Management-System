#include "../HAL/motor.h"
#include "../MCAL/uart.h"
#include "../Standard_Types/standard_types.h"
#include <stdlib.h>
#include <util/delay.h>

uint8 motorSpeed(uint8 speed)
{
	switch(speed)
	{
	case '1':
		return 50;
		break;
	case '2':
		return 75;
		break;
	case '3':
		return 100;
		break;
	}
}

int main(void)
{
	uint8 recievedMSG;

	UART_ConfigType uart_configratoin = {9600, UART_Parity_NONE, UART_STOP_1_BIT, MODE_EIGHT_BIT};
	UART_init(&uart_configratoin);

	DcMotor_Init(motorSpeed(UART_receiveByte()));

	while(1)
	{
		recievedMSG = UART_receiveByte();

		switch(recievedMSG)
		{
		case 'F':
			Forward();
			break;
		case 'B':
			Backward();
			break;
		case 'S':
			Stop();
			break;
		case 'R':
			Right_Forward();
			break;
		case 'L':
			Left_Forward();
			break;
		case '1':
			DcMotor_Init(motorSpeed(UART_receiveByte()));
			break;
		}
	}

	return 0;
}
